//n阶乘累加
int main()
{
	int n=0;
	int a=0;
	int b=1;
	int sum =0;
	for(n=1;n<=3;n++)
	{
	int b=1;
	for(a=1;a<=n;a++)
	{
		b=b*a;
	}
	sum=sum+b;
	}
	printf("sum= %d\n",sum);
	return 0;
}//注意for函数里面重置b=1
